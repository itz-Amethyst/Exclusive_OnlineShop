@page "{id}"
@model ServiceHost.Pages.ArticleModel
@{
    ViewData["Title"] = Model.Article.Title;
    ViewData["Keywords"] = Model.Article.Keywords;
    ViewData["metaDescription"] = Model.Article.MetaDescription;
}


<div class="breadcrumb-area section-space--half">

    <div class="container wide">

        <div class="row">

            @if (ViewBag.Created == true)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>عملیات با موفقیت انجام شد!</strong> نظر شما پس از تایید همکاران نمایش داده خواهد شد
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h1 class="breadcrumb-content__title">@Model.Article.Title</h1>
                        <ul class="breadcrumb-content__page-map">
                            <li>
                                <a asp-page="/Index">صفحه اصلی</a>
                            </li>
                            <li>
                                <a asp-page="/ArticleCategory" asp-route-id="@Model.Article.CategorySlug">@Model.Article.CategoryName</a>
                            </li>
                            <li class="active">@Model.Article.Title</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">

                            <div class="col-lg-9 order-1 order-lg-1">
                                <div class="blog-page-content">
                                    <div class="blog-single-post-container">



                                        <h3 class="post-title">@Model.Article.Title</h3>

                                        <div class="post-meta">
                                            <p>
                                                @* <span><i class="fa fa-user-circle"></i> Posted By: </span> <a href="#">admin</a> <span class="separator">|</span> *@ <span><i class="fa fa-calendar"></i> نوشته شده در تاریخ :@Model.Article.PublishDate </span>
                                            </p>
                                        </div>



                                        <div class="single-blog-post-media">
                                            <div class="image">
                                                <img src="~/UploadedFiles/@Model.Article.Picture" class="img-fluid" alt="@Model.Article.PictureAlt" title="@Model.Article.PictureTitle">
                                            </div>
                                        </div>



                                        <div class="post-content">
                                            @Html.Raw(Model.Article.Description)
                                        </div>


                                        <div class="social-share-buttons">
                                            <h3>share this post</h3>
                                            <ul>
                                                <li>
                                                    <a class="twitter" href="#">
                                                        <i class="fa fa-twitter"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="facebook" href="#">
                                                        <i class="fa fa-facebook"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="google-plus" href="#">
                                                        <i class="fa fa-google-plus"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="pinterest" href="#">
                                                        <i class="fa fa-pinterest"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>


                                    <div class="comment-section">
                                        <h3 class="comment-counter">نظرات (@Model.Article.Comments.Count)</h3>

                                        <div class="comment-container">
                                            @foreach (var comment in Model.Article.Comments)
                                            {
                                                <div class="single-comment" id="comment-@comment.Id">
                                                    <span class="reply-btn">
                                                        <a href="#postComment" onclick='$("#commentParentId").val(@comment.Id)'>پاسخ</a>
                                                    </span>
                                                    <div class="image">
                                                        <img src="~/AdminTheme/assets/images/users/avatar-9.jpg" alt="" class="Comment-Profile">
                                                    </div>
                                                    <div class="content">
                                                        <h3 class="user">
                                                            @comment.Name <span class="comment-time">
                                                                @comment.CreationDate
                                                            </span>
                                                        </h3>
                                                        @if (comment.ParentId > 0)
                                                        {
                                                            <span>در پاسخ به :</span>

                                                            <a href="#comment-@comment.ParentId">@comment.ParentName</a>
                                                        }
                                                        <p class="comment-text">
                                                            @comment.Message
                                                        </p>
                                                    </div>
                                                </div>
                                            }

                                        </div>

                                        <div class="comment-form-container">
                                            <h3 class="comment-form-title">نظر خود را یادداشت کنید</h3>
                                            <p>
                                                ایمیل وارد شده توسط شما به دیگران نمایش داده نمی شود. <span class="required">*</span>
                                            </p>

                                            <div class="comment-form" id="postComment">
                                                <form method="post">
                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="form-group">
                                                                <label>نظر شما</label>
                                                                <textarea name="message" id="message" placeholder="نظر خود را یادداشت کنید" required></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <div class="form-group">
                                                                <label>نام <span class="required">*</span></label>
                                                                <input type="text" name="Name" placeholder="نام شما" required>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <div class="form-group">
                                                                <label>ایمیل شما <span class="required">*</span></label>
                                                                <input type="email" name="Email" placeholder="test@gmail.com" required>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-12">
                                                            <div class="form-group">
                                                                <label>Recaptcha <span class="required">*</span></label>
                                                                <div class="g-recaptcha" data-sitekey="6Lf-bm0iAAAAAGAnNPsFvfgQIw4lcqdPUmf7R2dl"></div>

                                                                <span class="text-danger h6">
                                                                    @TempData["Message"]
                                                                </span>

                                                            </div>
                                                        </div>
                                                        <input type="hidden" name="OwnerRecordId" value="@Model.Article.Id" />
                                                        <input type="hidden" name="ArticleSlug" value="@Model.Article.Slug" />
                                                        <input type="hidden" name="parentId" id="commentParentId" value="" />
                                                        <div class="col-lg-12">
                                                            <button type="submit" class="comment-btn"
                                                                    name="submit">
                                                                ثبت نظر
                                                            </button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>

                                        </div>


                                    </div>

                                </div>
                            </div>
                            <div class="col-lg-3 order-2 order-lg-2">
                                <div class="page-sidebar-wrapper">
                                    <div class="single-sidebar-widget">

                                        <h4 class="single-sidebar-widget__title">گروه مقالات</h4>
                                        <ul class="single-sidebar-widget__category-list">

                                            @foreach (var category in Model.ArticleCategories)
                                            {
                                                <li>
                                                    <a asp-page="/ArticleCategory" asp-route-id="@category.Slug">
                                                        @category.Name <span class="counter">@category.ArticlesCount</span>
                                                    </a>
                                                </li>
                                            }

                                        </ul>
                                    </div>

                                    <div class="single-sidebar-widget">

                                        <h4 class="single-sidebar-widget__title">اخرین مقالات</h4>
                                        <div class="block-container">

                                            @foreach (var article in Model.LatestArticles)
                                            {
                                                <div class="single-block d-flex">
                                                    <div class="image">
                                                        <a asp-page="/Article" asp-route-id="@article.Slug">
                                                            <img src="~/UploadedFiles/@article.Picture"
                                                             class="img-fluid" alt="@article.PictureAlt" title="@article.Title">
                                                        </a>
                                                    </div>
                                                    <div class="content">
                                                        <p>
                                                            <a asp-page="/Article" asp-route-id="@article.Slug">@article.Title</a> <span>@article.PublishDate</span>
                                                        </p>
                                                    </div>
                                                </div>

                                            }

                                        </div>

                                    </div>

                                    <div class="single-sidebar-widget">
                                        <h4 class="single-sidebar-widget__title">تگ ها</h4>
                                        <ul class="single-sidebar-widget__tag-list">

                                            @foreach (var tag in Model.Article.KeyWordList)
                                            {
                                                <li>
                                                    <a asp-page="/Search" asp-route-value="@tag">@tag</a>
                                                </li>
                                            }

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>